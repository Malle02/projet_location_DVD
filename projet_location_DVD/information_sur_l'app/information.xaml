<Window x:Class="projet_location_DVD.information"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projet_location_DVD"
        mc:Ignorable="d"
        Title="information" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </Window.Resources>
    <Grid Background="#FFE6E6E6">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Informations sur l'application" FontSize="24" FontWeight="Bold" Margin="0 0 0 30"/>
            <TextBlock Text="Version : 1.6.10"/>
            <TextBlock Text="Développé par : TRAORE MALLE"/>
            <TextBlock Text="Crédits :"/>
            <TextBlock Text=" - Icon made by Freepik from www.flaticon.com"/>
            <TextBlock Text=" - Icon made by Smashicons from www.flaticon.com"/>
            <TextBlock Text=" - Icon made by Kiranshastry from www.flaticon.com"/>
        </StackPanel>
    </Grid>
</Window>
